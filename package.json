{
  "name": "wawisync",
  "version": "1.0.0",
  "description": "Electron App zur Synchronisation von Warenbest√§nden zwischen POS-System und Shopify",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:build:ts": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:build:ts && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run electron:build:ts && electron-builder",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "electron",
    "nextjs",
    "shopify",
    "inventory",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.5",
    "zod": "^3.23.8",
    "react-hook-form": "^7.52.1",
    "@hookform/resolvers": "^3.9.0",
    "zustand": "^4.5.2",
    "lucide-react": "^0.427.0",
    "csv-parse": "^5.5.6",
    "axios": "^1.7.2",
    "electron-store": "^10.1.0",
    "better-sqlite3": "^11.6.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
