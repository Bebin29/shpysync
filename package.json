{
  "name": "wawisync",
  "version": "1.0.0",
  "description": "Electron App zur Synchronisation von Warenbest√§nden zwischen POS-System und Shopify",
  "main": "electron/dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:build:ts": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json && tsc-esm-fix --target electron/dist",
    "fix:html": "node scripts/fix-html-base-tag.js",
    "electron:dev": "npm run electron:build:ts && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run fix:html && npm run electron:build:ts && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "electron:build:mac": "npm run build && npm run fix:html && npm run electron:build:ts && electron-builder --mac",
    "electron:build:linux": "npm run build && npm run fix:html && npm run electron:build:ts && electron-builder --linux",
    "electron:build:all": "npm run build && npm run fix:html && npm run electron:build:ts && electron-builder --win --mac --linux",
    "electron:build:prod": "node scripts/build-with-signing.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "test:parity": "vitest tests/parity"
  },
  "keywords": [
    "electron",
    "nextjs",
    "shopify",
    "inventory",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "axios": "^1.7.2",
    "better-sqlite3": "^11.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^5.5.6",
    "electron-store": "^10.1.0",
    "iconv-lite": "^0.7.0",
    "lucide-react": "^0.427.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/iconv-lite": "^0.0.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  }
}
